<UserControl x:Class="Denu.pendItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="42" Width="478">
    <Grid Width="478" Height="40">
        <Label x:Name="NameLbl" Content="Name" HorizontalAlignment="Left" Margin="85,1,0,0" VerticalAlignment="Top" Height="40" VerticalContentAlignment="Center" Padding="0" FontFamily="Cambria" FontWeight="Bold" FontSize="24" Width="206"/>
        <Image x:Name="cancelImg" Height="40" Margin="0,1,3,-1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="41" Source="cancel-icon.png" Stretch="Fill"/>
        <Image x:Name="checkImg" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="41" Stretch="Fill" Source="checkmark.png" Margin="12,1,0,-1"/>
        <Image x:Name="pendImg" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="41" Source="pending.png" Visibility="Hidden" Margin="0,1,0,0"/>
        <Label x:Name="QtyLbl" Content="xQty" HorizontalAlignment="Left" Margin="371,1,0,0" VerticalAlignment="Top" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" FontFamily="Cambria" FontWeight="Bold" FontSize="24" Width="61"/>
        <Label x:Name="PriceLbl" Content="Price" HorizontalAlignment="Left" Margin="296,1,0,0" VerticalAlignment="Top" Height="40" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Padding="0" FontFamily="Cambria" FontWeight="Bold" FontSize="24" Width="75"/>

    </Grid>
</UserControl>
